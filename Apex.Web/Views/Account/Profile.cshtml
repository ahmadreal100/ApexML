@model Apex.Service.ViewModels.Account.MasterInfoViewModel
@{
    var provinces = (List<SelectListItem>)ViewBag.Provinces ?? new List<SelectListItem>();
    var cities = (List<SelectListItem>)ViewBag.Cities ?? new List<SelectListItem>();
    //var isOperator = (bool)(ViewBag.IsOperator ?? false);
}

@section styles
{
    <link rel="stylesheet" type="text/css" href="~/assets/global/plugins/select2/select2.css">
}

<div class="page-content-wrapper">
    <div class="page-content">
        <!-- BEGIN PAGE CONTENT-->
        <div class="row">
            <div class="col-md-12">
                <div class="portlet box blue-ebonyclay">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>پروفایل
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <!-- BEGIN FORM-->
                        @using (Ajax.BeginForm("Profile", "Account", null, new AjaxOptions { HttpMethod = "POST", OnComplete = "profileConfirm" }, new { @class = "form-horizontal", autocomplete = "off" }))
                        {
                            @Html.HiddenFor(model => model.Id)
                            @Html.AntiForgeryToken()
