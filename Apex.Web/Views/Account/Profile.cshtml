                                {
                                    <div class="form-body">
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.ManagerTitle, new { @class = "control-label col-md-3" })
                                                    <div class="col-md-9 pos-relative">
                                                        @Html.TextBoxFor(model => model.ManagerTitle, new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.ManagerTitle)
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }*@
                            <div class="form-body">
                                <h3>اطلاعات</h3>
                                <div class="row">
                                    <div class="col-xs-12  col-sm-6 px-0">
                                        <div class="col-xs-12">
                                            <div class="form-group">
                                                <div class="col-xs-12 col-sm-3">
                                                    <table class="w-100">
                                                        <tr>
                                                            <td style="height: 100px;" class="text-xs-center text-sm-left">
                                                                @Html.LabelFor(model => model.LogoLink, new { @class = "control-label " })
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </div>
                                                <div class="col-xs-12 col-sm-9 pos-relative text-xs-center">
                                                    <table>
                                                        <tr>
                                                            <td>
                                                                @Html.Hidden("LogoLinkOld", Model?.LogoLink)
                                                                @Html.HiddenFor(model => model.LogoLink)
                                                                <a piclinkanchor class="img-thumbnail pos-relative">
                                                                    <img upload-img="#LogoLink" style="max-width: 100%;max-height: 70px;max-width: 150px; height: auto;" src="@(Model?.LogoLink ?? App.NoPic)" />
                                                                </a>
                                                                <small class="font-green"><i class="fa fa-picture-o px-2"></i><small>سایز مناسب : 350x150 پیکسل</small></small>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-6 px-0">
                                        <div class="col-xs-12">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.ManagerName, new { @class = "control-label col-md-3" })
                                                <div class="col-md-9 pos-relative">
                                                    @Html.TextBoxFor(model => model.ManagerName, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.ManagerName)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.ManagerFamily, new { @class = "control-label col-md-3" })
                                                <div class="col-md-9 pos-relative">
                                                    @Html.TextBoxFor(model => model.ManagerFamily, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.ManagerFamily)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    @*<div class="col-md-6">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.BusinessCode, new { @class = "control-label col-md-3" })
                                                <div class="col-md-9 pos-relative">
                                                    @Html.TextBoxFor(model => model.BusinessCode, new { disabled = "disabled", @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.BusinessCode)
                                                </div>
                                            </div>
                                        </div>*@
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.CommercialName, new { @class = "control-label col-md-3" })
                                            <div class="col-md-9 pos-relative">
                                                @Html.TextBoxFor(model => model.CommercialName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.CommercialName)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.BusinessName, new { @class = "control-label col-md-3" })
                                            <div class="col-md-9 pos-relative">
                                                @Html.TextBoxFor(model => model.BusinessName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.BusinessName)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.PhoneNumber, new { @class = "control-label col-md-3" })
                                            <div class="col-md-9 pos-relative">
                                                @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.PhoneNumber)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Mobile, new { @class = "control-label col-md-3" })
                                            <div class="col-md-9 pos-relative">
                                                @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Mobile)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--/row-->
                                <h2>آدرس</h2>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ProvinceId, new { @for = "Province", @class = "control-label col-md-3" })
                                            <div class="col-md-9 pos-relative">
                                                @Html.DropDownListFor(model => model.ProvinceId, provinces, "استان مورد نظر...", new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.CityId, new { @class = "control-label col-md-3" })
                                            <div class="col-md-9 pos-relative">
                                                @Html.DropDownListFor(model => model.CityId, cities, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.CityId)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
