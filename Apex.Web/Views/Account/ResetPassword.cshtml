@model Apex.Service.ViewModels.Account.ResetPasswordViewModel

@section styles
{
    <link rel="stylesheet" type="text/css" href="~/assets/global/plugins/select2/select2.css">
}
<div class="page-content-wrapper">
    <div class="page-content">
        <!-- /.modal -->
        <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row">
            <div class="col-md-12">
                <div class="portlet box blue-ebonyclay">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-lock"></i>تغییر رمز عبور
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <!-- BEGIN FORM-->
                        @using (Ajax.BeginForm("ResetPassword", "Account", null, new AjaxOptions { HttpMethod = "POST", OnComplete = "resetPasswordConfirm" }, new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-offset-3 col-sm-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.CurrnetPassword, new { @class = "control-label col-md-3" })
                                            <div class="col-md-9 pos-relative">
                                                @Html.PasswordFor(model => model.CurrnetPassword, new { autocomplete = "off", @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.CurrnetPassword)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-offset-3 col-sm-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.NewPassword, new { @class = "control-label col-md-3" })
                                            <div class="col-md-9 pos-relative">
                                                @Html.PasswordFor(model => model.NewPassword, new { autocomplete = "off", @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.NewPassword)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-offset-3 col-sm-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ConfirmNewPassword, new { @class = "control-label col-md-3" })
                                            <div class="col-md-9 pos-relative">
                                                @Html.PasswordFor(model => model.ConfirmNewPassword, new { autocomplete = "off", @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--/row-->
                            </div>
                            <div class="form-actions">
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-md-offset-4 col-md-4 text-center">
                                            <button type="submit" class="btn green btn-block">
                                                <i class="fa fa-check"></i>ذخیره اطلاعات
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <!-- END FORM-->
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT-->
    </div>
</div>

@section scripts
{
    <script src="~/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/ar.custom.validate.js?@App.GV"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/Account/resetpassword.js?@App.GV"></script>
}
